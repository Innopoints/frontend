{
  "name": "innopoints-frontend",
  "description": "Innopolis University innopoints project",
  "version": "0.3.0",
  "scripts": {
    "dev": "sapper dev",
    "build": "sapper build --legacy",
    "export": "sapper export --legacy",
    "start": "node __sapper__/build",
    "lint": "eslint --format=pretty .",
    "lint:fix": "eslint --format=pretty --fix .",
    "lint:style": "stylelint --ignore-path .eslintignore **/*.{css,scss}",
    "lint:style:fix": "stylelint --ignore-path .eslintignore --fix **/*.{css,scss}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --format=pretty",
      "prettier --ignore-path .eslintignore --noglob --write",
      "eslint --max-warnings 0 --fix",
      "git add"
    ],
    "*.svelte": [
      "eslint --format=pretty",
      "stylelint --ignore-path .eslintignore --noglob --fix",
      "prettier --ignore-path .eslintignore --svelte-sort-order scripts-markup-styles --noglob --write",
      "eslint --max-warnings 0 --fix",
      "git add"
    ],
    "*.{css,scss}": [
      "stylelint --ignore-path .eslintignore --syntax scss --noglob --fix",
      "prettier --ignore-path .eslintignore --noglob --write",
      "git add"
    ],
    "{*.{json,html,yml,md},.{eslintrc,prettierrc,stylelintrc}}": [
      "prettier --ignore-path .eslintignore --noglob --write",
      "git add"
    ]
  },
  "dependencies": {
    "compression": "^1.7.1",
    "polka": "next",
    "rollup-plugin-alias": "^2.0.0",
    "sirv": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-formatter-pretty": "^2.1.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^3.0.5",
    "jsdom": "^15.1.1",
    "lint-staged": "^9.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "./tmp_packages/prettier-1.18.1.tgz",
    "prettier-plugin-svelte": "^0.7.0",
    "rollup": "^1.12.0",
    "rollup-plugin-babel": "^4.0.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-svelte": "^5.0.1",
    "rollup-plugin-terser": "^4.0.4",
    "sapper": "^0.27.0",
    "stylelint": "./tmp_packages/stylelint-11.0.0.tgz",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-standard": "^19.0.0",
    "svelte": "^3.0.0"
  }
}
